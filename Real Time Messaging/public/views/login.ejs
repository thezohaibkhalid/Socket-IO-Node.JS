<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <style>

        .container {
            max-width: 500px;
            margin: auto;
            padding: 2rem;
        }
    </style>
</head>
<body class="bg-gray-900 flex items-center justify-center min-h-screen">

    <div class="container bg-white shadow-lg rounded-lg p-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Welcome!</h1>
        <p class="text-gray-600 mb-6 text-center">Click the button below to create a new user and receive your unique socket ID.</p>
        <div class="text-center">
            <button onclick="createUser()" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-300">Click to Create</button>
        </div>
        <div id="socket-id" class="mt-6 text-center text-gray-800"></div>
    </div>

    <!-- Socket.IO Script -->
    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Function to create a user and log the socket id
        const createUser = () => {
            const socket = io();
            socket.on('connect', () => {
                document.getElementById('socket-id').innerHTML = `<h2 class="text-lg font-semibold">Socket ID: <span class="font-mono">${socket.id}</span></h2>`;
            });
        }
    </script>
</body>
</html>
